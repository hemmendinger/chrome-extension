{
"manifest_version": 2,

"name": "Learning to make extensions",
"description": "Learning to make extensions.",
"version": "0.0",

"permissions": [
    "http://www.amazon.com/"
],
"browser_action": {
    "default_icon": "icon.png"
},
"content_scripts": [
    {
        "matches": ["http://www.amazon.com/*"],
        "js": ["next.js"],
        "run_at": "document_end"
    }
]

}