{
    "manifest_version": 2,

    "name": "Learning to make extensions",
    "description": "Learning to make extensions.",
    "version": "0.0",

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "clipboardRead",
        "http://*/*"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "browser action title"
    },
    "background": {
        //"scripts": ["background.js"]
        "page": "background.html"

    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": ["content.js", "jquery-1.10.2.min.js"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icon.png"
    }
}